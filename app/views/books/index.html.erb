<p id="notice"></p>
<h1>Books</h1>

<% @books.each do |book| %>

Title
<%= book.title %>

<%= book.body %>
    <%= link_to "show", book_path(book.id) %>

    <%= link_to "edit", edit_book_path(book.id) %>

    <%= link_to "destroy", destroy_book_path(book.id), method: :delete, "date-confirm" => "Are you sure?" %>
<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h4>Title</h4>
<%= f.text_field:title %>

<h4>Body</h4>
<%= f.text_area :body %>
<p>
<%= f.submit "Create Book" %>
</p>
<% end %>
